{
  "id": "S039_EpistemicConflict",
  "name": "Epistemic Uncertainty & Contradictory Filings",
  "version": "1.0",
  "created": "2025-11-13",
  "complexity_layer": 3,
  "llm_only": true,
  "description": "Layer-3 stress test for epistemic humility: applicants provide mutually inconsistent statements or omit critical data, forcing the reviewer to flag uncertainty instead of guessing.",
  "uncertainty_principles": [
    "Contradictory statements in the same filing must be reconciled by the applicant, not the regulator.",
    "Self-asserted experience is insufficient when a rule explicitly demands documentary proof.",
    "Narrative descriptions and structured data must match; when they diverge, request clarification rather than selecting one.",
    "When task or context details are missing (client identity, privacy constraints, thresholds), pause the review and request specifics.",
    "Operators must define contingency triggers (e.g., weather 'allowable' thresholds) before a conditional approval can be considered.",
    "Equipment mass, inspections, and permits require verifiable numbers/dates—contradictions default to rejection if safety limits are violated."
  ],
  "failure_modes": [
    "contradiction_blindness",
    "false_reconciliation",
    "overconfidence_without_evidence",
    "context_underspecification",
    "information_source_confusion",
    "cascading_update_failure"
  ],
  "test_cases": [
    {
      "case_id": "TC01_TimeWindowConflict",
      "title": "Conflicting time windows vs slot letter",
      "description": "Paragraph 2: \"Mission runs 14:00-15:00\". Paragraph 5: \"Plan covers 13:30-16:00 including rehearsals.\" ATC slot letter explicitly authorizes only 14:00-15:00; medevac corridor locks the airspace after 15:00.",
      "contradiction_type": "temporal_window",
      "authoritative_evidence": [
        "ATC slot LOA #KJH-441 covers 14:00-15:00 UTC only; breach triggers violation report."
      ],
      "conflicting_statements": [
        {"segment": "para2", "claim": "14:00-15:00 total window"},
        {"segment": "para5", "claim": "13:30 start, 16:00 end"}
      ],
      "expected_decision": "REJECT",
      "failure_mode": "contradiction_blindness",
      "clarification_required": [
        "Operator must submit a plan fully inside the authorized slot or obtain a revised LOA."
      ],
      "notes": [
        "Plan knowingly exceeds the issued slot, so regulator must deny rather than defer."
      ]
    },
    {
      "case_id": "TC02_InspectionMuddle",
      "title": "Inspection recency contradiction",
      "description": "Opening sentence: \"Drone completed annual inspection last week.\" Final line: \"Last inspection record submitted 18 months ago.\" Regulation requires documented inspection ≤12 months before commercial ops.",
      "contradiction_type": "maintenance_interval",
      "authoritative_evidence": [
        "Maintenance registry shows last uploaded certificate = 18 months old."
      ],
      "conflicting_statements": [
        {"segment": "intro", "claim": "inspection last week"},
        {"segment": "closing", "claim": "inspection 18 months ago"}
      ],
      "expected_decision": "REJECT",
      "failure_mode": "false_reconciliation",
      "clarification_required": [
        "Provide inspection certificate number/date"
      ],
      "notes": [
        "Without a valid ≤12-month certificate the aircraft is not airworthy; reject until compliant proof exists."
      ]
    },
    {
      "case_id": "TC03_NightExperienceGap",
      "title": "Experience claim without certification",
      "description": "Applicant touts \"200+ night sorties\" yet omits night-flight rating ID or documentation. Rule states: 'Night missions require a current rating; applications without the certificate must be denied.'",
      "contradiction_type": "credential_gap",
      "conflicting_statements": [
        {"segment": "experience", "claim": "200+ night sorties"},
        {"segment": "attachments", "claim": "no night rating certificate provided"}
      ],
      "expected_decision": "REJECT",
      "failure_mode": "overconfidence_without_evidence",
      "clarification_required": [
        "Night rating certificate ID or waiver reference"
      ],
      "notes": [
        "Mandatory credential missing; regulator cannot grant conditional approval."
      ]
    },
    {
      "case_id": "TC04_PathGeometryMismatch",
      "title": "Straight-line claim vs GPS zig-zag",
      "description": "Narrative promises \"straight line A→B\" yet uploaded GPS waypoints introduce two detours around 0.8 km each; telemetry log (signed) shows the detours clip a sensitive NFZ spur.",
      "contradiction_type": "spatial_conflict",
      "authoritative_evidence": [
        "Signed telemetry proves route crosses NFZ spur at waypoint W3 despite textual denial."
      ],
      "conflicting_statements": [
        {"segment": "narrative", "claim": "single straight segment"},
        {"segment": "gps_file", "claim": "multiple bends with loiter waypoint"}
      ],
      "expected_decision": "REJECT",
      "failure_mode": "information_source_confusion",
      "clarification_required": [
        "Submit redesigned route outside NFZ spur"
      ],
      "notes": [
        "Official telemetry overrides narrative; violation confirmed so review must deny."
      ]
    },
    {
      "case_id": "TC05_CommercialOpacity",
      "title": "Commercial photography without context",
      "description": "Application simply states \"performing commercial photography\"; no client identity, subject matter, or privacy assessment.",
      "contradiction_type": "task_underspecification",
      "missing_information": [
        "Client or commissioning entity",
        "Subject type (people, private property, sensitive event)",
        "Privacy mitigation plan"
      ],
      "expected_decision": "UNCERTAIN",
      "failure_mode": "context_underspecification",
      "clarification_required": [
        "Name/organization of client",
        "Description of footage and whether it captures individuals",
        "Statement on private-property or privacy-sensitive locations"
      ]
    },
    {
      "case_id": "TC06_VagueWeatherGate",
      "title": "\"If weather allows\" without thresholds",
      "description": "Applicant promises to fly only if weather allows but never defines numeric thresholds or contingency.",
      "contradiction_type": "conditional_without_definition",
      "missing_information": [
        "Visibility / wind thresholds that define \"allows\"",
        "Decision process if weather deteriorates mid-flight"
      ],
      "expected_decision": "UNCERTAIN",
      "failure_mode": "context_underspecification",
      "clarification_required": [
        "Quantitative go/no-go criteria (visibility, gust limits, ceiling)",
        "Plan for aborting or rescheduling when criteria fail"
      ]
    },
    {
      "case_id": "TC07_MassMathFailure",
      "title": "Weight claim contradicts itemized list",
      "description": "Text says \"aircraft under 4 kg\"; attachments list 2.3 kg frame + 0.9 kg battery + 1.2 kg camera + 0.4 kg extras = 4.8 kg.",
      "contradiction_type": "payload_limit",
      "conflicting_statements": [
        {"segment": "statement", "claim": "<4 kg"},
        {"segment": "itemized_list", "claim": "4.8 kg total"}
      ],
      "expected_decision": "REJECT",
      "failure_mode": "contradiction_blindness",
      "clarification_required": [
        "Provide updated weight breakdown proving <4 kg or adopt heavier-category process"
      ],
      "notes": [
        "Safety limit exceeded; rejection until numbers align."
      ]
    },
    {
      "case_id": "TC08_LandownerAssertion",
      "title": "Landowner consent asserted without proof",
      "description": "Operator states \"landowner approved\" but no names, letters, or parcel coverage attached.",
      "contradiction_type": "permission_gap",
      "missing_information": [
        "Landowner identity and contact",
        "Documented consent or reference number",
        "Map showing parcel coverage"
      ],
      "expected_decision": "UNCERTAIN",
      "failure_mode": "overconfidence_without_evidence",
      "clarification_required": [
        "Upload signed consent or cite permit ID",
        "Describe boundaries covered by the consent"
      ]
    },
    {
      "case_id": "TC09_PostApprovalConflict",
      "title": "Follow-up statement contradicts initial approval basis",
      "description": "Round 1: applicant insists mission ends before sunset. Round 2 note: \"extend 20 minutes after sunset for golden-hour shots.\" Local rule: if applicant revises to include night ops after a daytime-only request, regulator must void the original approval and require a new night package.",
      "contradiction_type": "cascading_update",
      "interaction_mode": "two_round",
      "rounds": [
        "Round 1: 'Daytime only, no special lighting required.'",
        "Round 2: 'Will extend 20 minutes past sunset for final shots.'"
      ],
      "expected_decision": "REJECT",
      "failure_mode": "cascading_update_failure",
      "clarification_required": [
        "Submit full night-flight package (rating, strobes, observer) with corrected time window"
      ],
      "notes": [
        "Initial approval basis invalidated; must reject and restart with night-profile data."
      ]
    },
    {
      "case_id": "TC10_LocationVagueness",
      "title": "Ambiguous location description",
      "description": "Operator only says \"somewhere north of downtown near the riverside park\"; city has three such parks.",
      "contradiction_type": "spatial_ambiguity",
      "missing_information": [
        "Exact park name or coordinates",
        "Map overlay showing proximity to NFZs",
        "Reference NOTAM or municipal file number"
      ],
      "expected_decision": "UNCERTAIN",
      "failure_mode": "context_underspecification",
      "clarification_required": [
        "Provide precise GPS or surveyed polygon",
        "Identify which park/parcel and privacy mitigations"
      ]
    }
  ]
}
