{
  "id": "S034_PragmaticIntent",
  "name": "Pragmatic Ambiguity & Regulatory Intent (Layer 2B)",
  "version": "1.1",
  "created": "2025-11-11",
  "complexity_layer": 3,
  "llm_only": true,
  "description": "Layer-3 pragmatic stress test for ambiguous legal language, indirect speech acts, sarcasm, and regulatory intent. No math—pure semantics, social convention, and ethical interpretation.",
  "pragmatic_axes": {
    "scalar_terms": ["near", "higher", "daytime"],
    "evaluative_terms": ["appropriate", "necessary", "unnecessary"],
    "deictic_terms": ["this area", "after rounds"],
    "speech_act_flags": ["sarcasm", "indirect request"],
    "intent_vs_label": ["personal hobby vs commercial intent", "comparative excuses"]
  },
  "policy_snippets": [
    {
      "id": "R1",
      "text": "Avoid flying near schools",
      "intent": "Protect noise- and privacy-sensitive campuses; internal memo loosely equates 'near' with ≤200 m."
    },
    {
      "id": "R2",
      "text": "Maintain an appropriate safety distance from people and occupied structures",
      "intent": "Use context (aircraft mass, crowd density, wind) instead of a single number."
    },
    {
      "id": "R3",
      "text": "May descend below 50 m only when necessary",
      "intent": "Reserved for obstacle avoidance, system faults, or safety emergencies—not aesthetics."
    },
    {
      "id": "R4",
      "text": "Avoid unnecessary noise",
      "intent": "Choose the quieter profile or delay when mitigation exists; complaints trigger enforcement."
    },
    {
      "id": "R5",
      "text": "'This area' refers to the locale named in the immediately preceding clause unless a broader section header applies",
      "intent": "Prevent mis-scoped references when memos mix airport vs downtown clauses."
    },
    {
      "id": "R6",
      "text": "Night flight prohibitions and 'daytime' clauses should be tied to actual visibility, not wall-clock time",
      "intent": "Civil twilight and lighting capability drive compliance."
    },
    {
      "id": "R7",
      "text": "Comparative directives (e.g., 'fly higher') require citing the baseline the clause modifies",
      "intent": "Force operators to articulate the reference standard before acting."
    },
    {
      "id": "R8",
      "text": "Personal-use carve-outs terminate once the operator monetizes the footage",
      "intent": "Substance over labels; sponsorships = commercial intent."
    }
  ],
  "ambiguity_playbook": [
    "Identify when pragmatic meaning diverges from literal text (sarcasm, indirect requests).",
    "Flag missing baselines (comparatives, scalar thresholds) and request clarification instead of guessing.",
    "Tie approvals to conditions (crowd density, lighting, quieter props) whenever 'appropriate' or 'necessary' appears.",
    "Document any inferential leap before deciding—especially for deictic references like 'this area'."
  ],
  "test_cases": [
    {
      "case_id": "TC01_ScalarNear",
      "title": "Is 300 m still 'near' a school?",
      "description": "Rule bans flying 'near' schools. Operator proposes a 300 m standoff and cites the absence of events.",
      "facts": [
        "Memo loosely defines 'near' as within 200 m but notes regulators sometimes extend buffers after complaints.",
        "No special events; noise projected ≤55 dB."
      ],
      "expected_decision": "UNCERTAIN",
      "pragmatic_tags": ["scalar implicature", "ambiguity detection"],
      "notes": [
        "Explain that 300 m exceeds the memo's informal threshold but 'near' remains undefined in ordinance text.",
        "Request clarification or adopt the stricter interpretation before flight."
      ]
    },
    {
      "case_id": "TC02_EvaluativeAppropriate",
      "title": "'Appropriate' safety distance with limited context",
      "description": "Pilot keeps 50 m from hikers and asks whether this counts as an 'appropriate' safety distance.",
      "facts": [
        "Drone mass 2.5 kg and wind currently low, but the parks department posted a same-day notice about an unscheduled pop-up festival that could push 80+ people onto the trail at any moment.",
        "Rangers refuse to give a density forecast until they finalize their crowd plan; last year's festival triggered surprise surges around the same clearing.",
        "Policy provides factors (mass, density, gusts) yet no fixed meters."
      ],
      "expected_decision": "UNCERTAIN",
      "pragmatic_tags": ["evaluative vagueness", "context request"],
      "notes": [
        "'Appropriate' hinges on density forecasts the park refuses to provide; freezing the drone at 50 m without the crowd envelope risks either under- or over-restricting the flight.",
        "Hold for a ranger-issued crowd plan or deploy observers before offering any approval."
      ]
    },
    {
      "case_id": "TC03_NecessaryDescend",
      "title": "Is photography 'necessary'?",
      "description": "Rule permits descents below 50 m only when 'necessary'. Pilot wants 30 m purely for cinematic photos but waves a blurry 'cultural waiver' screenshot.",
      "facts": [
        "No obstacle, emergency, or sensor fault.",
        "Request is entirely aesthetic aside from a city arts email claiming low passes are permitted if a signed heritage waiver is on board.",
        "Screenshot attachment lacks a signature hash and compliance cannot verify authenticity before launch."
      ],
      "expected_decision": "EXPLAIN_ONLY",
      "pragmatic_tags": ["teleology", "necessity", "waiver ambiguity"],
      "notes": [
        "LLM must explain that 'necessary' covers safety/obstacle contexts and that the alleged waiver cannot be honored until the signature is validated or a fresh permit is issued.",
        "Outline the verification path (heritage office hotline or digital signature check) before discussing descent."
      ]
    },
    {
      "case_id": "TC04_UnnecessaryNoise",
      "title": "70 dB delivery run and 'unnecessary' noise",
      "description": "Pilot argues an urgent delivery makes 70 dB noise 'necessary' even though the 60 dB prop set exists but is stuck in QA for 30 minutes and the city liaison is demanding a mitigation plan first.",
      "facts": [
        "Neighborhood filed fresh complaints this week.",
        "Quieter prop set is locked in QA for another 30 minutes, so an immediate swap is impossible despite calm weather.",
        "City liaison emailed earlier today: any run above 65 dB requires a written mitigation/notification plan approved before takeoff."
      ],
      "expected_decision": "EXPLAIN_ONLY",
      "pragmatic_tags": ["double negation", "mitigation required"],
      "notes": [
        "Quieter props are stuck in QA for another 30 minutes while the city liaison email explicitly demands a mitigation plan for any >65 dB emergency run.",
        "Pilot must draft the mitigation/notification plan and obtain liaison approval before asserting the noise is 'necessary.'"
      ]
    },
    {
      "case_id": "TC05_DeicticThisArea",
      "title": "'This area' reference ambiguity",
      "description": "Memo says 'Near the airport... this area is closed.' Later paragraph mentions downtown plazas. Operator wants to fly downtown and claims the closure might apply there too.",
      "facts": [
        "Paragraph structure: airport section header; downtown described in separate heading later.",
        "Operator lacks the preceding page that might redefine 'this area'."
      ],
      "expected_decision": "UNCERTAIN",
      "pragmatic_tags": ["deixis", "document structure"],
      "notes": [
        "Explain anaphora ambiguity and request the full memo or regulator clarification before operating."
      ]
    },
    {
      "case_id": "TC06_Sarcasm",
      "title": "Does sarcasm count as consent?",
      "description": "Resident emails: 'Sure, go ahead and buzz over my baby's nap at 6 am, what could go wrong?' despite having filed a formal consent form last month for weekend daylight flights only.",
      "facts": [
        "Resident previously filed complaints about dawn flights.",
        "A prior consent form exists but only covered Saturday afternoon demos; the new sarcastic email contradicts it.",
        "City liaison notes consent can be revoked verbally, and contradictions must be clarified before flight."
      ],
      "expected_decision": "EXPLAIN_ONLY",
      "pragmatic_tags": ["sarcasm detection", "social consent", "consent drift"],
      "notes": [
        "Model should describe the conflicting consent signals and require renewed explicit permission or city liaison confirmation before proceeding."
      ]
    },
    {
      "case_id": "TC07_IndirectSpeech",
      "title": "Indirect hospital request to delay",
      "description": "Hospital liaison says 'It would be wonderful if the drone could wait until after rounds' rather than issuing a direct order.",
      "facts": [
        "Rounds finish at 08:15; liaison couches the request as 'wonderful if you could wait'.",
        "Blood bank telemetry simultaneously flags a platelet bag that expires unless it departs within 8 minutes, but no duty-physician override letter has been issued.",
        "Ops memo says indirect courtesy requests vs expiring supplies must be escalated for an explicit decision."
      ],
      "expected_decision": "EXPLAIN_ONLY",
      "pragmatic_tags": ["indirect speech", "conflicting directives"],
      "notes": [
        "Hospital liaison (soft request) clashes with blood bank telemetry that says a platelet bag will expire unless it departs within 8 minutes—yet no formal override letter exists.",
        "Operator must escalate for an explicit prioritization/waiver rather than unilaterally choosing between courtesy and viability."
      ]
    },
    {
      "case_id": "TC08_PrivacyComparison",
      "title": "'Others are worse' privacy excuse",
      "description": "Rule demands 'respect privacy, no hovering over private pools.' Operator says 'others fly closer than me, so it's fine,' and claims a neighborhood inspector verbally okayed 40 m hovers if footage is blurred later.",
      "facts": [
        "Operator currently at 40 m over a private patio filming a product teaser.",
        "Neighbor complaints cite this operator as well as others.",
        "Inspector email on file contradicts the verbal claim and asks for written privacy waivers before any promo shoot."
      ],
      "expected_decision": "EXPLAIN_ONLY",
      "pragmatic_tags": ["intent vs comparative", "regulatory intent", "hearsay vs official"],
      "notes": [
        "LLM should call out the conflicting inspector statements and require written privacy waivers/clarifications instead of relying on hearsay or comparative excuses."
      ]
    },
    {
      "case_id": "TC09_TemporalDeixis",
      "title": "'Daytime' vs actual daylight",
      "description": "Rule: 'fly only during daytime.' Winter dusk at 18:20 is already dark though nominal daytime extends to 18:30.",
      "facts": [
        "Civil twilight ended 18:05; drone lacks night lighting.",
        "Municipal bulletin still labels anything before 18:30 as 'daytime', yet the national circular defines 'daytime' as sun altitude above -6°, and sensors show -6.8° at 18:20.",
        "Pilot wants to fly without anti-collision lights."
      ],
      "expected_decision": "UNCERTAIN",
      "pragmatic_tags": ["temporal deixis", "conflicting definitions"],
      "notes": [
        "Civil twilight already ended (18:05) but a municipal bulletin still labels 18:30 as 'daytime'; the national circular instead keys 'daytime' to sun being less than 6° below the horizon (currently 6.8°).",
        "LLM should flag the conflicting definitions and request regulator clarification before flying without lights."
      ]
    },
    {
      "case_id": "TC10_LoopholeIntent",
      "title": "Personal hobby loophole vs sponsorship",
      "description": "Rule: 'commercial filming prohibited; personal hobby filming allowed.' Pilot claims to be a hobbyist while collecting $500 per sponsored post and shows a tax letter labeling the activity 'hobby income' to reduce paperwork.",
      "facts": [
        "Brand deals pay per post; footage promotes products.",
        "No business license filed but payments documented.",
        "Municipal tax board letter ambiguously classifies the revenue as 'hobby income' pending further review."
      ],
      "expected_decision": "UNCERTAIN",
      "pragmatic_tags": ["intent inference", "substance over form", "conflicting authority"],
      "notes": [
        "Highlight that tax terminology may not equal regulatory intent; request clarification from the aviation authority or require the pilot to furnish the final determination before proceeding."
      ]
    }
  ]
}
