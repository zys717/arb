{
  "id": "S037_ImplicitPriority",
  "name": "Implicit Cross-Domain Priority Inference",
  "version": "1.0",
  "created": "2025-11-12",
  "complexity_layer": 3,
  "llm_only": true,
  "description": "Layer-3 scenario stressing pragmatic/social reasoning: multiple rules from different domains must be prioritized without explicit hierarchy labels.",
  "domain_guidelines": [
    "Emergency life safety generally outweighs seasonal or noise restrictions.",
    "Temporary waivers cannot override military/critical infrastructure protections unless an official bulletin is issued.",
    "Environmental justice discourages shifting burdens to vulnerable communities even when formal complaints are lower.",
    "Cultural heritage requests and public statements should influence routing even when not strictly codified."
  ],
  "test_cases": [
    {
      "case_id": "TC01_BirdSanctuaryVsEmergency",
      "title": "Bird sanctuary vs medical emergency",
      "description": "Bird sanctuary NFZ active March-May; date = April 15; medevac to remote clinic needs to cross zone.",
      "facts": [
        "Environmental regulation: March-May no flights to protect migrating birds.",
        "Mission: perishable medical supplies, 15 minutes to deliver.",
        "Flight altitude 80 m to minimize noise, monitoring equipment onboard."
      ],
      "expected_decision": "EXPLAIN_ONLY",
      "notes": [
        "Describe the approval rationale plus the mitigation plan (altitude guard band, disturbance log, post-mission report) before dispatch."
      ]
    },
    {
      "case_id": "TC02_NoiseOrdinanceVsFire",
      "title": "Night noise vs fire response",
      "description": "City ordinance bans drones 22:00-06:00; at 02:00 fire department asks for thermal scan of a suspected blaze.",
      "facts": [
        "Noise ordinance intended for routine operations.",
        "Thermal scan may locate survivors or hotspots.",
        "Fire chief provides written request.",
        "Mayor’s office demands a public notification plan after prior complaints when curfew waivers were granted."
      ],
      "expected_decision": "CONDITIONAL_APPROVE",
      "notes": [
        "Approve only if operations command notifies residents post-mission and files a curfew waiver log within 12 hours."
      ]
    },
    {
      "case_id": "TC03_AirportVsSchool",
      "title": "Airport buffer vs school flyover",
      "description": "Route passes 5.2 km from airport (limit 5 km) and over primary school at 120 m; class in session.",
      "facts": [
        "Airport buffer slightly exceeded.",
        "School guideline: avoid low-altitude over children, no explicit number.",
        "Mission type: routine mapping.",
        "Community board asks for justification before approving any school overflight."
      ],
      "expected_decision": "EXPLAIN_ONLY",
      "notes": [
        "Require the operator to redesign the route beyond school limits and provide written explanation to the community board before any future approval."
      ]
    },
    {
      "case_id": "TC04_PublicBenefitQueue",
      "title": "Public benefit prioritization",
      "description": "Slot conflict: A=food delivery for premium clients; B=educational supplies for underserved school.",
      "facts": [
        "Reg says 'public benefit first' but undefined.",
        "Slot allows only one mission.",
        "B is time-sensitive (semester start)."
      ],
      "expected_decision": "EXPLAIN_ONLY",
      "notes": [
        "Describe the communication to both operators, log the fairness rationale, and ensure Mission A gets the next available slot."
      ]
    },
    {
      "case_id": "TC05_WeddingExpedite",
      "title": "Wedding expedite request",
      "description": "Standard permit lead time 48h; wedding photography firm requests 1-day expedite citing milestone importance.",
      "facts": [
        "Emergency expedite allowed for safety/humanitarian needs only.",
        "No life-safety impact if delayed.",
        "Venue accessible by normal process if filed on time."
      ],
      "expected_decision": "EXPLAIN_ONLY",
      "notes": [
        "Explain expedite criteria, formally deny, and document guidance for future planning."
      ]
    },
    {
      "case_id": "TC06_ExpertOverride",
      "title": "Expert claims vs temporary NFZ",
      "description": "Pilot with 20 years experience wants to ignore temporary NFZ for festival coverage claiming 'safe'.",
      "facts": [
        "Temporary NFZ active (city festival).",
        "Pilot claims countless safe flights.",
        "No official waiver."
      ],
      "expected_decision": "EXPLAIN_ONLY",
      "notes": [
        "Explain denial to the pilot, suggest coordinating with city media office for alternate coverage, and document the refusal for festival command."
      ]
    },
    {
      "case_id": "TC07_ExpiredMilZone",
      "title": "Expired rule near military base",
      "description": "Document says NFZ valid until Nov 1; now Nov 3; base perimeter signs still warn to stay clear; new bulletin pending.",
      "facts": [
        "No formal renewal yet.",
        "Base security still operating checkpoints.",
        "Mission is recreational filming."
      ],
      "expected_decision": "REJECT",
      "notes": [
        "Apply precautionary principle until explicit clearance issued."
      ]
    },
    {
      "case_id": "TC08_EnvironmentalJustice",
      "title": "Noise routing fairness",
      "description": "Option A: wealthy area with complaints, Option B: low-income dense housing with fewer complaints; mission is routine commerce.",
      "facts": [
        "No alternative route currently planned.",
        "City guidelines mention avoiding disproportionate burdens though not binding."
      ],
      "expected_decision": "EXPLAIN_ONLY",
      "notes": [
        "Require a written routing change (route A mitigation or redesign) plus communication with community liaisons prior to clearance."
      ]
    },
    {
      "case_id": "TC09_RGBLights",
      "title": "RGB lights vs anti-collision spec",
      "description": "Night flight; operator installs RGB decorative lights claiming brighter than standard anti-collision strobes.",
      "facts": [
        "Reg references aviation standard (specific frequency/flash pattern).",
        "RGB lights constant or non-compliant."
      ],
      "expected_decision": "REJECT",
      "notes": [
        "Brightness alone insufficient; require certified anti-collision lights."
      ]
    },
    {
      "case_id": "TC10_HeritageRespect",
      "title": "Heritage site request",
      "description": "Flight over UNESCO heritage area lacks specific regulation but cultural office issued public plea to minimize flights during tourist hours.",
      "facts": [
        "Mission: documentary filming.",
        "Local community leaders request avoidance 10:00-17:00.",
        "Cultural office has not yet responded to the operator’s outreach email."
      ],
      "expected_decision": "EXPLAIN_ONLY",
      "notes": [
        "Describe the coordination steps (follow-up call, scheduling outside 10:00–17:00) before granting final permission."
      ]
    }
  ]
}
